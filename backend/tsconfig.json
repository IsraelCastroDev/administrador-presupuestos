{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["jest"],
    //    "typeRoots": ["src/@types", "./node_modules/@types/*"],
    "lib": ["esnext"],
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "src/@types/**/*.d.ts"]
}
